#use for, spilt() and if
st = "print only the words that start with s in this statement"
#mylist = st.split( )
for words in st.split():
    if words[0] == 's' or words[0] == 'S':
        print(words)
#print(mylist)
#print all the even numbers from range 0 to 10 use range()
for num in range(0,10):
    if num%2==0:
        print(num)

my_even_list = list(range(0,11,2))
print(f"my even number list is: {my_even_list}")

mylist3 = [num for num in range(1,50) if num%3==0]
print(mylist3)